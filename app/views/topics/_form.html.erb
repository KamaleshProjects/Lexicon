<%= form_with model: topic do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% topic.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :lexicon %><br>
    <%= form.textarea :lexicon %>
    <% topic.errors.full_messages_for(:lexicon).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

